
@{
    Layout = "_Admin";
}

<div class="section">
    <h2 class="header center black-text">INSERISCI LA PASSWORD PER ACCEDERE</h2>

    <div class="row">
        @using (Html.BeginForm(new { @class = "col s12 center-align" })) { 
            <span class="red-text">@ViewBag.Error</span>
            <div class="row">
                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate">
                    <label for="password">Password</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">
                Submit
                <i class="material-icons right">send</i>
            </button>
        }
    </div>
</div>

